extends ./layout/_layout.jade
block css
block js
  script(src='scripts/vertical-nav.js', type='text/javascript')
  script(src='scripts/slide-in-panel.js', type='text/javascript')
  script(src='http://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.14/angular.min.js', type='text/javascript')
  script(src='scripts/main.js', type='text/javascript')
block content
  main.cd-main-content
    nav#cd-vertical-nav
      ul
        li
          a(href='#about', data-number='1')
            span.cd-dot
            span.cd-label About
        li
          a(href='#skill', data-number='2')
            span.cd-dot
            span.cd-label Skill
        // li
        //   a(href='#work', data-number='3')
        //     span.cd-dot
        //     span.cd-label Works
        li
          a(href='#blog', data-number='4')
            span.cd-dot
            span.cd-label Blog

    .home-page#top
      section.cover
        .row
          .small-12.columns.cover-title
            h1 YA YIN CHANG
            p Graphic Designer &amp; Web Developer
            a(href="#start")
              i.fa.fa-angle-down.fa-3x

      .row
        .small-12.columns
          .home-box#start
          
            section.about.cd-section#about
              .row
                .small-12.small-centered.columns
                  .portrait
                     img(src="images/profile.jpg", alt="")
                .small-10.small-centered
                  .content.text-center(style="padding-top:60px")
                    p I'm a sophomore studing in 
                      abbr(title="The National Taiwan University of Science and Technology") NTUST
                      | , Taipei, Taiwan.
                .small-12.columns
                  a.secondary.hollow.button.btn-about.cd-btn(href='#') Learn more

            section.skill.cd-section#skill
              .row
                .small-10.small-centered.columns
                  .content.text-center
                    p While major in Graphic Design, 
                      br
                      | I'm also a self-taught Web Developer.
                  .small-12.columns
                    .skills
                      ul.lines
                        li.line.l-0
                          span.line-label
                        li.line.l-25
                          span.line-label Beginner
                        li.line.line_down.l-50
                          span.line-label.label_down Advanced
                        li.line.l-75
                          span.line-label Seasoned
                        li.line.line_down.l-100
                          span.line-label.label_down Expert

                      .charts
                        .chart.chart-design
                          span.chart-title Design
                          ul.chart-horiz
                            li.chart_bar.chart_ps(data-skill='70')
                              span.chart_label Photoshop
                            li.chart_bar.chart_ai(data-skill='80')
                              span.chart_label Illustrator
                              
                        .chart.chart-dev
                          span.chart-title Development
                          ul.chart-horiz
                            li.chart_bar.chart_html(data-skill='90')
                              span.chart_label HTML
                            li.chart_bar.chart_css(data-skill='80')
                              span.chart_label CSS &amp; SCSS   
                            li.chart_bar.chart_js(data-skill='50')
                              span.chart_label JavaScript
            
