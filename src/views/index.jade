extends ./layout/_layout.jade
block css
block js
  script(src='scripts/vertical-nav.js', type='text/javascript')
  script(src='scripts/slide-in-panel.js', type='text/javascript')
  script(src='http://cdnjs.cloudflare.com/ajax/libs/angular.js/1.3.14/angular.min.js', type='text/javascript')
  script(type='text/javascript').
    window.sr = ScrollReveal();
    var mainLeft = {
      duration : 1500,
      delay    : 100,
      distance : '90px',
      rotate   : { z: 10 },
      scale    : 0.8
    };
    var mainRight = {
      duration : 1500,
      delay    : 500,
      distance : '90px',
      rotate   : { z: -10 },
      scale    : 0.8
    };
    sr.reveal('.about', mainLeft);
    sr.reveal('.skill', mainRight);
    sr.reveal('.work', mainLeft);
    sr.reveal('.blog', mainRight);

block content
  main.cd-main-content
    nav#cd-vertical-nav
      ul
        li
          a(href='#about', data-number='1')
            span.cd-dot
            span.cd-label About
        li
          a(href='#skill', data-number='2')
            span.cd-dot
            span.cd-label Skill
        li
          a(href='#work', data-number='3')
            span.cd-dot
            span.cd-label Works
        li
          a(href='#blog', data-number='4')
            span.cd-dot
            span.cd-label Blog

    .home-page#top
      section.cover
        .row
          .small-12.columns.title
            h1 YA YIN CHANG
            p Graphic Designer &amp; Front-end Developer
            a(href="#start")
              i.fa.fa-angle-down.fa-3x

      .row
        .small-12.columns
          .home-box#start
            section.about.cd-section#about
              .row
                .small-12.small-centered.columns
                  .portrait
                    //- img(src="images/profile.jpg", alt="")
                .small-10.small-centered
                  .content.text-center(style="padding-top:60px")
                    p I'm a sophomore studing in 
                      abbr(title="The National Taiwan University of Science and Technology") NTUST
                      | , Taipei, Taiwan.
                .small-12.columns
                  a.secondary.hollow.button.btn-about.cd-btn(href='#') Learn more

            section.skill.cd-section#skill
              .row
                .small-10.small-centered.columns
                  .content.text-center
                    p While major in Graphic Design, 
                      br
                      | I'm also a self-taught Front-end Developer.
                  .small-12.columns
                    .skills
                      ul.lines
                        li.line.l-0
                          span.line-label.title Skill level:
                        li.line.l-25
                          span.line-label The basics
                        li.line.l-50
                          span.line-label Advanced
                        li.line.l-75
                          span.line-label Seasoned
                        li.line.l-100
                          span.line-label Expert

                      .charts
                        .chart.chart-design
                          span.chart-title Design
                          ul.chart-horiz
                            li.chart_bar(data-skill='70')
                              span.chart_label Photoshop
                            li.chart_bar(data-skill='80')
                              span.chart_label Illustrator
                              
                        .chart.chart-dev
                          span.chart-title Development
                          ul.chart-horiz
                            li.chart_bar(data-skill='95')
                              span.chart_label HTML(5)
                            li.chart_bar(data-skill='80')
                              span.chart_label CSS(3) &amp; SCSS   
                            li.chart_bar(data-skill='50')
                              span.chart_label JavaScript



            
            section.work.cd-section#work
              .row
                .small-10.small-centered.columns
                  .content.text-center
                    p Here are my lastast work:
                .small-10.small-centered.columns
                  .small-12.medium-6.columns
                    article
                      .image(style="background-image:url('images/pic04.jpg')")
                      h3.major Title
                      p context
                      a.special(href='#') Learn more
                  .small-12.medium-6.columns
                    article
                      .image(style="background-image:url('images/pic04.jpg')")
                      h3.major Title
                      p context
                      a.special(href='#') Learn more
                .small-12.columns
                  a.secondary.hollow.button.btn-work(href='project.html') All Works
            
            section.blog.cd-section#blog
              .row
                .small-10.small-centered.columns
                  .content.text-center
                    p I also like to share what I've learnt and done:
                .small-10.small-centered.columns
                  article
                    .small-12.medium-6.columns
                      .image(style="background-image:url('images/pic04.jpg')")
                    .small-12.medium-6.end.columns
                      .post
                        h3.major Title
                        p context
                        a.special(href='#') View more
                .small-12.columns
                  a.secondary.hollow.button.btn-blog(href='#') All Articles
          
            include ./partials/_footer

  include ./partials/_timeline